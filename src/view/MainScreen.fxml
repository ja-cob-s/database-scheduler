        <tabs>
          <Tab fx:id="AppointmentsTab" closable="false" text="Appointments">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ChoiceBox fx:id="AppointmentTypeChooser" layoutX="450.0" layoutY="18.0" maxHeight="25.0" maxWidth="115.0" minHeight="25.0" minWidth="115.0" onMouseClicked="#AppointmentTypeChooserHandler" prefHeight="25.0" prefWidth="115.0" />
                        <TableView fx:id="AppointmentsTable" layoutY="54.0" prefHeight="525.0" prefWidth="800.0">
                          <columns>
                            <TableColumn fx:id="AppointmentaDateColumn" prefWidth="100.0" text="Date" />
                            <TableColumn fx:id="AppointmentaStartColumn" minWidth="0.0" prefWidth="75.0" text="Start Time" />
                              <TableColumn fx:id="AppointmentaEndColumn" prefWidth="75.0" text="End Time" />
                              <TableColumn fx:id="AppointmentaCustomerColumn" prefWidth="108.0" text="Customer" />
                              <TableColumn fx:id="AppointmentaConsultantColumn" prefWidth="108.0" text="Consultant" />
                              <TableColumn fx:id="AppointmentaDescriptionColumn" prefWidth="190.0" text="Description" />
                              <TableColumn fx:id="AppointmentaLocationColumn" prefWidth="140.0" text="Location" />
                          </columns>
                        </TableView>
                        <ChoiceBox fx:id="AppointmentViewChooser" layoutX="585.0" layoutY="18.0" maxHeight="25.0" maxWidth="115.0" minHeight="25.0" minWidth="115.0" onMouseClicked="#AppointmentViewChooserHandler" prefHeight="25.0" prefWidth="115.0" />
                     </children></AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="CustomersTab" closable="false" text="Customers">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="CustomersTable" layoutY="54.0" prefHeight="525.0" prefWidth="800.0">
                           <columns>
                              <TableColumn fx:id="CustomersNameColumn" prefWidth="150.0" text="Name" />
                              <TableColumn fx:id="CustomersAddressColumn" minWidth="0.0" prefWidth="225.0" text="Address" />
                              <TableColumn fx:id="CustomersCityColumn" prefWidth="105.0" text="City" />
                              <TableColumn fx:id="CustomersCountryColumn" prefWidth="102.0" text="Country" />
                              <TableColumn fx:id="CustomersPostalCodeColumn" text="Postal Code" />
                              <TableColumn fx:id="CustomersPhoneColumn" prefWidth="135.0" text="Phone Number" />
                           </columns>
                        </TableView>
                     </children></AnchorPane>
            </content>
          </Tab>
            <Tab fx:id="ReportsTab" closable="false" text="Reports">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <SplitMenuButton fx:id="ReportChooser" layoutX="475.0" layoutY="18.0" maxHeight="25.0" maxWidth="225.0" minHeight="25.0" minWidth="225.0" mnemonicParsing="false" onAction="#ReportChooserHandler" prefHeight="25.0" prefWidth="225.0" text="Choose Report">
                           <items>
                              <MenuItem fx:id="AppointmentTypeMenuItem" mnemonicParsing="false" text="Appointment Types By Month" />
                              <MenuItem fx:id="ConsultantScheduleMenuItem" mnemonicParsing="false" text="Consultant Schedule" />
                              <MenuItem fx:id="CustomersLocationMenuItem" mnemonicParsing="false" text="Customers By Location" />
                           </items>
                        </SplitMenuButton>
                        <TableView fx:id="ReportsTable" layoutY="54.0" prefHeight="525.0" prefWidth="800.0">
                           <columns>
                              <TableColumn fx:id="ReportsDateColumn" prefWidth="100.0" text="Date" />
                              <TableColumn fx:id="ReportsStartColumn" minWidth="0.0" prefWidth="75.0" text="Start Time" />
                              <TableColumn fx:id="ReportsEndColumn" prefWidth="75.0" text="End Time" />
                              <TableColumn fx:id="ReportsCustomerColumn" prefWidth="108.0" text="Customer" />
                              <TableColumn fx:id="ReportsConsultantColumn" prefWidth="108.0" text="Consultant" />
                              <TableColumn fx:id="ReportsDescriptionColumn" prefWidth="190.0" text="Description" />
                              <TableColumn fx:id="ReportsLocationColumn" prefWidth="140.0" text="Location" />
                           </columns>
                        </TableView>
                     </children></AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
      <Button fx:id="NewButton" defaultButton="true" layoutX="20.0" layoutY="47.0" maxHeight="25.0" maxWidth="60.0" minHeight="25.0" minWidth="60.0" mnemonicParsing="false" onAction="#NewButtonHandler" prefHeight="25.0" prefWidth="60.0" text="New" />
      <Button fx:id="ExitButton" layoutX="720.0" layoutY="47.0" maxHeight="25.0" maxWidth="60.0" minHeight="25.0" minWidth="60.0" mnemonicParsing="false" onAction="#ExitButtonHandler" prefHeight="25.0" prefWidth="60.0" text="Exit" />
   </children>
</AnchorPane>
